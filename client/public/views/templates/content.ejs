<div id="title-bar" class="ui container">
  <a href="#/" class="ui header button">VGDB</a>
  <span>Scalable, globally sourced, platform agnostic, video game information</span>
</div>

<div id="search-field" class="ui center aligned container">
  <form class="ui form" ng-submit="redirectToContent()">
    <div class="ui large icon input">
      <input type="text" placeholder="Search for a game" ng-model="searchTerm">
      <i class="search icon"></i>
    </div>
    <input class="ui red button" type="submit" value="Search">
  </form>
</div>

<div id="popular-searches" class="ui center aligned container">
  <h3>Popular Searches: </h3>
  <ul>
    <li ng-repeat="search in popularSearches"><a href="#/search/{{search.queryString}}">{{search.queryString}}</a></li>
  </ul>
</div>

<div id="main-content" class="ui grid">
  <div class="four wide column">
    <div id="giantbomb" class="ui image" ng-show="showImage">
      <img ng-src="{{ gameImage }}" alt="" />
    </div>
    <div class="">
      <h4>Release Date:</h4>
      <p>{{ giantBombData.original_release_date }}</p>

      <h4>Developer: </h4>
      <div class="ui list">
        <div class="item" ng-repeat="developer in giantBombData.developers">{{ developer.name }}</div>
      </div>
      <h4>Genre: </h4>
      <div class="ui list">
        <div class="item" ng-repeat="genre in giantBombData.genres">{{ genre.name }}</div>
      </div>
      <h4>Platforms: </h4>
      <div class="ui list">
        <div class="item" ng-repeat="platform in giantBombData.platforms">{{ platform.name }}</div>
      </div>
      <h3>You might also like: </h3>
      <div id="similar-games" class="ui list">
        <div class="item" ng-repeat="similarGame in giantBombData.similar_games">
          <a href="{{ similarGame.site_detail_url }}">{{ similarGame.name }}</a>
        </div>
      </div>
    </div>
  </div>

  <div class="twelve wide column">
    <div class="ui horizontal divider">
      <h1 id="giantbomb-title" class="ui center aligned header">{{ giantBombData.name }}</h1>
    </div>
    <div id="giantbomb-summary" class="ui italic header">
      <h3>"<i>{{ giantBombData.deck }}</i>"</h3>
    </div>
    <div class="ui description container">
      <div id="twitch-container">
        <img id="twitch-logo" class="ui centered image"src="../../media/twitch-logo-smallest.png" alt="" />
        <iframe id="twitch-stream"
          src=""
          height="320"
          width="426"
          frameborder="0"
          scrolling="no"
          allowfullscreen="true"
          autoplay="true">
        </iframe>
      </div>
      <div class="ui horizontal divider"><h2 class="ui header">Overview</h2></div>
      <p id="giantbomb-description"></p>
    </div>

    <img id="youtube-logo" class="ui image" src="../../media/youtube-logo.png" alt="" />
    <div id="video-here"></div>
  </div>
</div>

<div id="image-viewer" class="ui modal">
  <div class="ui image">
    <img ng-src="{{ currentImage }}" alt="" />
  </div>
</div>

<div class="ui grid">
  <div id="image-gallery" class="ui small images">
    <h2 class="centered header">{{ giantBombData.name }} Screenshots</h2>
    <div class="ui divider"></div>
    <img ng-repeat="image in giantBombData.images" ng-src="http://static.giantbomb.com{{image.medium_url}}" ng-click="setImageAndShowModal(image.super_url)" alt="" />
  </div>
</div>
