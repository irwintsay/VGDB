        <input class='form-field' type="text" name="lastName" placeholder="Last Name">
        <input class='form-field' type="text" name="username" placeholder="Username*">
        <input class='form-field' type="text" name="email" placeholder="Email*">
        <input class='form-field' type="password" name="password" placeholder="Password*">
        <input id='signup-submit' type="submit" name="submit-form" value="Sign Up">
        <div class='change-form'>Already have an account? <a href='#' id='login-link'>Log in</a></div>
      </form>
    </div>
